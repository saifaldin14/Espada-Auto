  "configSchema": {
    "type": "object",
    "properties": {
      "defaultSubscription": {
        "type": "string",
        "description": "Default Azure subscription ID"
      },
      "defaultRegion": {
        "type": "string",
        "description": "Default Azure region",
        "default": "eastus"
      },
      "defaultTenantId": {
        "type": "string",
        "description": "Default Azure AD tenant ID"
      },
      "credentialMethod": {
        "type": "string",
        "description": "Preferred credential method",
        "enum": ["default", "cli", "service-principal", "managed-identity", "browser"],
        "default": "default"
      },
      "credentialSources": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Credential sources in order of preference"
      },
      "tagConfig": {
        "type": "object",
        "description": "Standard tag configuration",
        "properties": {
          "requiredTags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags that must be present on all resources"
          },
          "optionalTags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags that are optional but recommended"
          }
        }
      },
      "defaultTags": {
        "type": "array",
        "description": "Default tags to apply to all resources",
        "items": {
          "type": "object",
          "properties": {
            "key": { "type": "string" },
            "value": { "type": "string" }
          }
        }
      }
    }
  }
}
