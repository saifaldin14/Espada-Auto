    "test:watch": "vitest",
    "lint": "oxlint .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "espada",
    "infrastructure",
    "knowledge-graph",
    "topology",
    "blast-radius",
    "drift-detection",
    "cloud",
    "devops"
  ],
  "espada": {
    "extensions": [
      "index.ts"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "espada": "workspace:*",
