{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Infrastructure drift detection — velocity, affected resources, provider breakdown",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Drifted Resources",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_drift_total",
          "legendFormat": "Drifted",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Disappeared Resources",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_drift_disappeared",
          "legendFormat": "Disappeared",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "New Resources",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_drift_new",
          "legendFormat": "New",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "title": "Drift Rate (7d avg)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg_over_time(infra_graph_drift_total[7d])",
          "legendFormat": "7d avg",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Drift Velocity",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 16, "x": 0, "y": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_drift_total",
          "legendFormat": "Drifted",
          "refId": "A"
        },
        {
          "expr": "infra_graph_drift_disappeared",
          "legendFormat": "Disappeared",
          "refId": "B"
        },
        {
          "expr": "infra_graph_drift_new",
          "legendFormat": "New",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "showPoints": "auto"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Drifted" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Disappeared" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "New" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "title": "Drift by Provider",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 8, "x": 16, "y": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_drift_by_provider",
          "legendFormat": "{{ provider }}",
          "refId": "A"
        }
      ],
      "options": {
        "pieType": "donut",
        "displayLabels": ["name", "value"]
      }
    },
    {
      "title": "Drift Heatmap (per day)",
      "type": "heatmap",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(infra_graph_drift_total[1d])",
          "legendFormat": "Drift events",
          "refId": "A"
        }
      ],
      "options": {
        "calculate": false,
        "color": {
          "mode": "scheme",
          "scheme": "Oranges"
        }
      }
    },
    {
      "title": "Mean Time to Remediation (estimate)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(infra_graph_drift_total[1h]) * 60",
          "legendFormat": "Drift rate (per hour)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "title": "Infrastructure Changes",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_changes_total",
          "legendFormat": "Total Changes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      }
    }
  ],
  "refresh": "5m",
  "schemaVersion": 39,
  "tags": ["infra-graph", "drift", "infrastructure"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" }
      }
    ]
  },
  "time": { "from": "now-7d", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Infra Graph — Drift Velocity",
  "uid": "infra-graph-drift",
  "version": 1
}
