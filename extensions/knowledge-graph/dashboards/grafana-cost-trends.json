  "links": [],
  "panels": [
    {
      "title": "Total Monthly Cost",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_cost_monthly",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "red", "value": 20000 }
            ]
          }
        }
      }
    },
    {
      "title": "Total Nodes",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_nodes_total",
          "legendFormat": "Nodes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "title": "Total Edges",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_edges_total",
          "legendFormat": "Edges",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "purple", "value": null }
            ]
          }
        }
      }
    },
    {
      "title": "Changes Tracked",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_changes_total",
          "legendFormat": "Changes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "orange", "value": null }
            ]
          }
        }
      }
    },
    {
      "title": "Monthly Cost Trend",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_cost_monthly",
          "legendFormat": "Total Cost",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "title": "Nodes by Provider",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_nodes_by_provider",
          "legendFormat": "{{ provider }}",
          "refId": "A"
        }
      ],
      "options": {
        "pieType": "donut",
        "displayLabels": ["name", "percent"]
      }
    },
    {
      "title": "Nodes by Resource Type",
      "type": "barchart",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(15, infra_graph_nodes_by_resource_type)",
          "legendFormat": "{{ resource_type }}",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "fillOpacity": 80
          }
        }
      }
    },
    {
      "title": "Node Count Trend",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 26 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_nodes_total",
          "legendFormat": "Total Nodes",
          "refId": "A"
        },
        {
          "expr": "infra_graph_edges_total",
          "legendFormat": "Total Edges",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "title": "Cost by Provider",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 26 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_nodes_by_provider * on(provider) group_left infra_graph_cost_monthly",
          "legendFormat": "{{ provider }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "custom": {
            "fillOpacity": 80
          }
        }
      }
    }
  ],
  "refresh": "5m",
  "schemaVersion": 39,
  "tags": ["infra-graph", "cost", "infrastructure"],
