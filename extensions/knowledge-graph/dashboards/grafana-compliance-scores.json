{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Compliance framework scores, control pass rates, and violation tracking",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Overall Compliance Score",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_score{framework=\"$framework\"}",
          "legendFormat": "{{ framework }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "yellow", "value": 70 },
              { "color": "green", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Controls Passed",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_controls_passed{framework=\"$framework\"}",
          "legendFormat": "Passed",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        }
      }
    },
    {
      "title": "Controls Failed",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_controls_failed{framework=\"$framework\"}",
          "legendFormat": "Failed",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Total Controls",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_controls_total{framework=\"$framework\"}",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          }
        }
      }
    },
    {
      "title": "Pass Rate",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_controls_passed{framework=\"$framework\"} / infra_graph_compliance_controls_total{framework=\"$framework\"} * 100",
          "legendFormat": "Pass Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "green", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Failures by Severity",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_failures_by_severity{framework=\"$framework\"}",
          "legendFormat": "{{ severity }}",
          "refId": "A"
        }
      ],
      "options": {
        "pieType": "donut",
        "displayLabels": ["name", "value"]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "critical" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "high" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "medium" },
            "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "low" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "title": "Compliance Score Trend",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 16, "x": 0, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_score",
          "legendFormat": "{{ framework }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto",
            "thresholdsStyle": { "mode": "line" }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 70 }
            ]
          }
        }
      }
    },
    {
      "title": "Scores by Framework",
      "type": "barchart",
      "gridPos": { "h": 10, "w": 8, "x": 16, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_score",
          "legendFormat": "{{ framework }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 70 }
            ]
          },
          "custom": {
            "fillOpacity": 80
          }
        }
      },
      "options": {
        "orientation": "horizontal"
      }
    },
    {
      "title": "Failed Controls Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "infra_graph_compliance_controls_failed{framework=\"$framework\"}",
          "legendFormat": "Failed Controls",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "gradientMode": "scheme",
            "showPoints": "auto"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    }
  ],
  "refresh": "5m",
  "schemaVersion": 39,
  "tags": ["infra-graph", "compliance", "security"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" }
      },
      {
        "name": "framework",
        "type": "custom",
        "query": "cis,nist-800-53,soc2,hipaa,pci-dss,iso-27001",
        "current": { "text": "cis", "value": "cis" },
        "options": [
          { "text": "CIS", "value": "cis", "selected": true },
          { "text": "NIST 800-53", "value": "nist-800-53", "selected": false },
          { "text": "SOC 2", "value": "soc2", "selected": false },
          { "text": "HIPAA", "value": "hipaa", "selected": false },
          { "text": "PCI-DSS", "value": "pci-dss", "selected": false },
          { "text": "ISO 27001", "value": "iso-27001", "selected": false }
        ]
      }
    ]
  },
  "time": { "from": "now-30d", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Infra Graph â€” Compliance Scores",
  "uid": "infra-graph-compliance",
  "version": 1
}
